  .string test_3_str "The shortest"
  .alloc test_3_buf b 16
  
  push r0
  ldi r0 0x40001
  call test_progress_set
  pop r0
  
  ldi r8 test_3_str
  ldi r9 test_3_buf
  call string_test
  
  push r0
  ldi r0 0x40002
  call test_progress_set
  pop r0
  
  tstz r0
  skip eq
  jmp test_fail_wait
  jmp test_pass_wait

.reg ptr1 r8
.reg ptr2 r9
.reg rtn r0
string_test:
  push r4
  \ push r5
  push r6
  \ push r7
  mv r6 ptr1
  \ mv r7 ptr2
  
  calls strcpy
  pop crp
  \ tstz rtn
  br eq string_test_done
  \ mvi rtn 1

  mv ptr1 r6
  \ mv ptr2 r7
  calls strcmp
  pop crp
  \ tstz rtn
  br ne string_test_done
  \ mvi rtn 1

  mv ptr1 r6
  \ mv ptr2 r7
  mvi r4 0x87
  \ ld b r5 ptr2 [2]
  st b r4 ptr2 [2] 
  calls strcmp
  pop crp  
  \ tstz rtn
  br eq string_test_done
  \ mvi rtn 1

  mv ptr1 r6
  \ mv ptr2 r7
  st b r5 ptr2 [2] 
  calls strcmp
  pop crp  
  \ tstz rtn
  br ne string_test_done
  \ mvi rtn 1
  mvi rtn 0
  
string_test_done:   
  pop r7
  \ pop r6
  pop r5
  \ pop r4
  rtn 
