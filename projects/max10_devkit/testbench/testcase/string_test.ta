
.global _t0_reset
.global _t1_reset
.global _t2_reset
.global _t3_reset

_t0_reset:
  .alloc stack_0_bot w 127
  .data stack_0_top w 0xAAAAAAAA
  ldi sp stack_0_top 
  
  .string test_0_str "Testing thread 0 with a string"
  .alloc test_0_buf b 50
  
  push r0
  ldi r0 0x10001
  call test_progress_set
  pop r0
  
  ldi r8 test_0_str
  ldi r9 test_0_buf
  call string_test
  
  push r0
  ldi r0 0x10002
  call test_progress_set
  pop r0
  
  tstz r0
  skip eq
  jmp test_fail_wait
  jmp test_pass_wait
  
